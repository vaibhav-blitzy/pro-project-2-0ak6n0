VITE_MODE=production

# API Configuration
VITE_API_URL=https://api.taskmanager.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000
VITE_API_RATE_LIMIT=1000
VITE_ENABLE_MOCK_API=false

# WebSocket Configuration
VITE_WS_URL=wss://ws.taskmanager.com
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000
VITE_WS_PING_INTERVAL=25000
VITE_WS_PING_TIMEOUT=5000

# Content Delivery
VITE_CDN_URL=https://cdn.taskmanager.com

# Security Settings
VITE_CSP_ENABLED=true
VITE_SECURE_COOKIES=true
VITE_SSL_ENABLED=true
VITE_HSTS_ENABLED=true
VITE_XSS_PROTECTION=true
VITE_FRAME_PROTECTION=DENY

# Performance Monitoring
VITE_SENTRY_DSN=https://sentry.taskmanager.com
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_PERFORMANCE_MONITORING_ENABLED=true

# Feature Flags
VITE_ENABLE_DEBUG_LOGGING=false
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_METRICS=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# Cache Configuration
VITE_CACHE_TTL=3600
VITE_CACHE_MAX_SIZE=100
VITE_ENABLE_SERVICE_WORKER=true

# Analytics
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_SAMPLE_RATE=100

# Regional Settings
VITE_DEFAULT_TIMEZONE=UTC
VITE_DEFAULT_LOCALE=en-US
VITE_SUPPORTED_LOCALES=["en-US","es-ES","fr-FR","de-DE","ja-JP"]

# Resource Limits
VITE_MAX_UPLOAD_SIZE=10485760
VITE_MAX_CONCURRENT_REQUESTS=10
VITE_REQUEST_TIMEOUT=30000
VITE_IDLE_TIMEOUT=300000