VITE_MODE=development
VITE_PORT=3000

# API Configuration
VITE_API_URL=http://localhost:8080/api/v1
VITE_API_TIMEOUT=30000
VITE_API_VERSION=v1
VITE_ENABLE_API_MOCKING=true
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8080/api/v1/notifications/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000
VITE_WS_PING_INTERVAL=25000
VITE_WS_PING_TIMEOUT=5000

# Development Features
VITE_ENABLE_DEBUG_LOGGING=true
VITE_ENABLE_MOCK_API=true
VITE_ENABLE_API_LOGGING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_BOUNDARIES=true

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_CORS=true
VITE_SECURE_COOKIES=false
VITE_ENABLE_RATE_LIMITING=true
VITE_RATE_LIMIT_REQUESTS=1000
VITE_RATE_LIMIT_INTERVAL=3600

# Development Tools
VITE_ENABLE_REACT_DEVTOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_NETWORK_INSPECTOR=true
VITE_ENABLE_COMPONENT_INSPECTOR=true

# Feature Flags
VITE_FEATURE_REAL_TIME_UPDATES=true
VITE_FEATURE_OFFLINE_MODE=true
VITE_FEATURE_FILE_UPLOAD=true
VITE_FEATURE_RICH_TEXT_EDITOR=true

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_TRACKING=true
VITE_ENABLE_USER_TRACKING=false

# Cache Configuration
VITE_ENABLE_API_CACHE=true
VITE_CACHE_TTL=300
VITE_MAX_CACHE_SIZE=10485760

# Internationalization
VITE_DEFAULT_LANGUAGE=en
VITE_ENABLE_RTL_SUPPORT=true
VITE_AVAILABLE_LANGUAGES=["en","es","fr"]

# Development Services
VITE_MOCK_API_PORT=3001
VITE_STORYBOOK_PORT=6006
VITE_CYPRESS_PORT=3002