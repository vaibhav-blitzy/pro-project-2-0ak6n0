{
  "name": "task-management-system-test-suite",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters='text-summary' 'lcov' 'json'",
    "test:e2e": "cypress open",
    "test:e2e:ci": "cypress run --headless --browser chrome,firefox,edge",
    "test:load": "k6 run k6.config.ts",
    "test:security": "snyk test && snyk monitor",
    "test:all": "npm run test:coverage && npm run test:e2e:ci && npm run test:load && npm run test:security",
    "test:cleanup": "rimraf coverage cypress/screenshots cypress/videos",
    "test:report": "jest --json --outputFile=jest-results.json && cypress run --reporter junit"
  },
  "dependencies": {
    "@elastic/elasticsearch": "8.0.0",
    "amqplib": "^0.10.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "16.3.1",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^4.0.0",
    "knex": "^2.5.0",
    "pg": "^8.11.0",
    "prom-client": "^14.0.0",
    "socket.io-client": "^4.7.2",
    "speakeasy": "^2.0.0",
    "typeorm": "^0.3.17",
    "uuid": "8.3.2",
    "ws": "^8.13.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.7.0",
    "@cypress/code-coverage": "^3.10.0",
    "@cypress/performance": "^1.0.0",
    "@cypress/performance-monitor": "^1.0.0",
    "@cypress/security-tools": "^2.0.0",
    "@cypress/websocket": "^1.0.0",
    "@faker-js/faker": "^8.0.0",
    "@jest/globals": "^29.0.0",
    "@test/data-generator": "^1.0.0",
    "@test/performance-monitor": "^1.0.0",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/data-validation": "^1.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/performance-monitor": "^1.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/security-utils": "^1.2.0",
    "@testing-library/security-validator": "^1.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/cypress": "^1.1.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "axe-core": "^4.7.0",
    "axios-mock-adapter": "^1.22.0",
    "cypress": "13.0.0",
    "cypress-audit": "^1.1.0",
    "cypress-axe": "^1.4.0",
    "cypress-performance": "^2.0.0",
    "cypress-websocket-testing": "^1.2.0",
    "jest": "29.7.0",
    "jest-junit": "^16.0.0",
    "k6": "0.45.0",
    "lighthouse": "10.0.0",
    "mochawesome": "^7.1.3",
