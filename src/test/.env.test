# Core Application Settings
NODE_ENV=test
TEST_PORT=3001
TEST_API_VERSION=v1
TEST_LOG_LEVEL=error
TEST_CORS_ORIGIN=*
TEST_APP_NAME=task-management-system
TEST_REQUEST_TIMEOUT=30000

# API Gateway Configuration
TEST_KONG_ADMIN_URL=http://localhost:8002
TEST_KONG_PROXY_URL=http://localhost:8003
TEST_RATE_LIMIT_USER_HOUR=5000
TEST_RATE_LIMIT_ORG_HOUR=10000
TEST_API_TIMEOUT=5000

# Authentication & Security
TEST_JWT_SECRET=test-jwt-secret-key-must-be-changed-in-production
TEST_JWT_EXPIRY=1h
TEST_REFRESH_TOKEN_SECRET=test-refresh-token-secret-key-must-be-changed-in-production
TEST_REFRESH_TOKEN_EXPIRY=24h
TEST_PASSWORD_SALT_ROUNDS=10
TEST_SESSION_SECRET=test-session-secret-key-must-be-changed-in-production
TEST_MFA_ENABLED=false
TEST_BCRYPT_ROUNDS=10
TEST_TOKEN_ISSUER=task-management-test

# Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_NAME=taskmanager_test
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
TEST_DB_SSL=false
TEST_DB_MAX_POOL=5
TEST_DB_IDLE_TIMEOUT=5000
TEST_DB_CONNECTION_TIMEOUT=3000
TEST_DB_STATEMENT_TIMEOUT=10000
TEST_DB_QUERY_TIMEOUT=20000

# Redis Cache Configuration
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6380
TEST_REDIS_PASSWORD=test_redis_password
TEST_REDIS_DB=1
TEST_REDIS_PREFIX=taskmanager_test:
TEST_REDIS_TTL=3600
TEST_REDIS_MAX_RETRIES=3
TEST_REDIS_RETRY_DELAY=1000
TEST_REDIS_ENABLE_READY_CHECK=true

# Elasticsearch Configuration
TEST_ELASTICSEARCH_NODES=http://localhost:9201
TEST_ELASTICSEARCH_USERNAME=elastic_test
TEST_ELASTICSEARCH_PASSWORD=test_es_password
TEST_ELASTICSEARCH_SSL_ENABLED=false
TEST_ELASTICSEARCH_INDEX_SHARDS=1
TEST_ELASTICSEARCH_INDEX_REPLICAS=0
TEST_ELASTICSEARCH_REQUEST_TIMEOUT=5000

# Message Queue Configuration
TEST_RABBITMQ_HOST=localhost
TEST_RABBITMQ_PORT=5672
TEST_RABBITMQ_USERNAME=test_user
TEST_RABBITMQ_PASSWORD=test_password
TEST_RABBITMQ_VHOST=test
TEST_RABBITMQ_QUEUE_PREFIX=test_

# Testing Framework Configuration
JEST_TIMEOUT=30000
CYPRESS_BASE_URL=http://localhost:3001
K6_VIRTUAL_USERS=10
K6_DURATION=30s
MOCK_EXTERNAL_SERVICES=true
SKIP_CLEANUP=false
GENERATE_COVERAGE=true
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=false
RETRY_FAILED_TESTS=2

# Performance Testing Thresholds
TEST_API_RESPONSE_THRESHOLD=500
TEST_DB_QUERY_THRESHOLD=200
TEST_CACHE_OPERATION_THRESHOLD=100
TEST_SEARCH_QUERY_THRESHOLD=300

# Logging & Monitoring
TEST_LOG_FORMAT=json
TEST_LOG_DIR=logs/test
TEST_ENABLE_REQUEST_LOGGING=true
TEST_ENABLE_PERFORMANCE_LOGGING=true
TEST_ENABLE_AUDIT_LOGGING=true
TEST_METRICS_ENABLED=true
TEST_TRACING_ENABLED=true

# File Storage
TEST_UPLOAD_DIR=uploads/test
TEST_MAX_FILE_SIZE=10485760
TEST_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
TEST_STORAGE_PROVIDER=local

# External Service Mocks
TEST_MOCK_EMAIL_SERVICE=true
TEST_MOCK_PAYMENT_SERVICE=true
TEST_MOCK_NOTIFICATION_SERVICE=true
TEST_MOCK_EXTERNAL_API=true

# Security Testing
TEST_ENABLE_SECURITY_HEADERS=true
TEST_ENABLE_RATE_LIMITING=true
TEST_ENABLE_XSS_PROTECTION=true
TEST_ENABLE_CSRF_PROTECTION=true
TEST_ENABLE_CORS=true
TEST_ENABLE_HELMET=true

# Test Data Management
TEST_DATA_SEED_ENABLED=true
TEST_DATA_CLEANUP_ENABLED=true
TEST_PRESERVE_ERROR_LOGS=true
TEST_MAX_TEST_DURATION=300000