{
  "name": "@task-management/notification-service",
  "version": "1.0.0",
  "private": true,
  "description": "Notification microservice for the Task Management System",
  "main": "dist/app.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn src/app.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t task-management/notification-service .",
    "docker:push": "docker push task-management/notification-service",
    "validate": "npm audit && npm outdated",
    "migrate": "typeorm migration:run",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "dependencies": {
    "@nestjs/core": "^9.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "2.0.0",
    "@nestjs/swagger": "^6.0.0",
    "@nestjs/websockets": "^9.0.0",
    "@nestjs/platform-socket.io": "^9.0.0",
    "@nestjs/terminus": "9.0.0",
    "@nestjs/throttler": "^4.0.0",
    "@nestjs/circuit-breaker": "1.0.0",
    "@sendgrid/mail": "7.7.0",
    "@socket.io/redis-adapter": "8.2.1",
    "amqplib": "^0.10.0",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^5.2.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-rate-limit": "6.9.0",
    "helmet": "7.0.0",
    "ioredis": "5.3.2",
    "nodemailer": "^6.9.0",
    "opossum": "^6.0.0",
    "pino": "^8.16.2",
    "rate-limiter-flexible": "^2.4.1",
    "rxjs": "^7.8.0",
    "socket.io": "^4.7.0",
    "uuid": "^9.0.0",
    "winston": "3.10.0",
    "winston-daily-rotate-file": "^4.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/amqplib": "^0.10.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/nodemailer": "^6.4.0",
    "@types/socket.io": "^3.0.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.53.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Task Management System Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/organization/task-management.git"
  },
  "keywords": [
    "notification",
    "websocket",
    "real-time",
    "microservice",
    "task-management"
  ]
}